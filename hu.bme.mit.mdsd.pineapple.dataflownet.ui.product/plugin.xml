<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.DataflowNetApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.Perspective"
            id="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.smcategory"
            class="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.View"
            id="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.view"
            name="View"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.smcategory"
            class="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.StateMachineView"
            id="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.statemachineview"
            name="StateMachineView"
            restorable="true">
      </view>
      <category
            id="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.smcategory"
            name="SMCategory">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="dataflownetapplication"
         point="org.eclipse.core.runtime.products">
      <product
            application="hu.bme.mit.mdsd.pineapple.dataflownet.ui.product.application"
            name="DataflowNet user interface">
         <property
               name="appName"
               value="DataflowNet user interface">
         </property>
      </product>
   </extension>

</plugin>
